---
import { SOCIALS } from '@/consts.d'
---

<div class='flex gap-4'>
  {
    SOCIALS.map(({ label, link: href, icon: Icon }) => (
      <a
        href={href}
        target='_blank'
        class='flex bg-[#111111] gap-3 px-6 py-2 rounded-full border-[#666666] border mt-6 items-center'
      >
        <Icon class='size-8 text-white' />
        <span class='text-white text-2xl font-semibold'>{label}</span>
      </a>
    ))
  }
</div>
