---
import { SOCIALS } from '@/consts.d'
import Link from './Link.astro'
---

<div class='flex gap-4 mt-4'>
  {
    SOCIALS.map(({ label, link, icon: Icon }) => (
      <Link
        href={link}
        class='gap-3 px-6 py-2 rounded-full'
      >
        <Icon class='size-8' />
        <span class='text-2xl font-semibold'>{label}</span>
      </Link>
    ))
  }
</div>
