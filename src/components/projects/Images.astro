---
interface Props {
  name: string
  images: string[]
}

const { images, name } = Astro.props
const [image1, image2] = images

const alt = `Screenshot of the project ${name}`
---

{
  image2 ? (
    <>
      <img
        src={image2}
        class='image right-[75px] bottom-[60px] w-[250px] h-[200px] rounded-xl border border-[#333]'
        alt={alt}
      />
      <img
        src={image1}
        class='image w-[240px] h-[200px] aligned-rb'
        alt={alt}
      />
    </>
  ) : (
    <img
      src={image1}
      class='image w-[190px] h-[260px] aligned-rb'
      alt={alt}
    />
  )
}

<style>
  .image {
    @apply absolute object-cover;
  }
  .aligned-rb {
    @apply right-0 bottom-0 rounded-tl-xl border-t border-l border-[#333];
  }
</style>
