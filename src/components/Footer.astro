---
import { SOCIALS } from '@/consts.d'
import { Cat } from '@components/Cat.tsx'
import Link from '@components/Link.astro'
const slicedSocials = SOCIALS.slice(1)
---

<footer class='mb-12 flex justify-between gap-24 items-end'>
  <aside class='flex gap-8 items-center'>
    <div class='flex gap-4'>
      {
        slicedSocials.map(({ label, icon: Icon, link }) => (
          <Link
            name={label}
            href={link}
            class='border-none bg-transparent'
          >
            <Icon class='size-8 text-white' />
          </Link>
        ))
      }
    </div>
    <small class='text-xs font-light text-zinc-400 text-nowrap'>
      Cat sprites taken from
      <a
        class='text-zinc-200 hover:underline'
        aria-label='Stardew Valley website'
        href='https://www.stardewvalley.net'
        target='_blank'
      >
        Stardew Valley
      </a>
    </small>
  </aside>
  <div class='w-full relative'>
    <Cat client:visible />
  </div>
</footer>
