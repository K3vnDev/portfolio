---
interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='description'
			content='Astro description'
		/>
		<meta
			name='viewport'
			content='width=device-width'
		/>
		<link
			rel='shortcut icon'
			href='./public/icon.svg'
			type='image/x-icon'
		/>
		<meta
			name='generator'
			content={Astro.generator}
		/>
		<title>{title}</title>
	</head>
	<body class='bg-[#151515] overflow-x-hidden flex justify-center'>
		<slot />
		<div
			class={`
				fixed top-0 left-0 -z-50 h-screen w-full bg-neutral-950 
				bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]
			`}
		>
		</div>
	</body>

	<style is:global>
		@import url('https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap');

		* {
			font-family:
				Inter,
				system-ui,
				-apple-system,
				BlinkMacSystemFont,
				'Segoe UI',
				Roboto,
				Oxygen,
				Ubuntu,
				Cantarell,
				'Open Sans',
				'Helvetica Neue',
				sans-serif;
		}

		:root {
			--proj-p: 10px;
			--link-btn-bg: #111;
			--gradient: linear-gradient(#700aff, #2e0bdc, #6f00ff, #700aff);
		}

		html {
			scroll-behavior: smooth;
		}
	</style>
</html>
