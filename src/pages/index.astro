---
import { PROJECTS, SECTIONS } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import Footer from '@components/Footer.astro'
import Navbar from '@components/Navbar.astro'
import Section from '@components/Section.astro'
import Socials from '@components/Socials.astro'
import Title from '@components/Title.astro'
import { ContactForm } from '@components/contact-form/ContactForm'
import Project from '@components/project/Project.astro'
---

<Layout title="Kevin's Portfolio | Fullstack Developer">
  <main
    class='flex flex-col md:gap-52 gap-40 xl:max-w-[75rem] max-w-4xl w-full sm:mx-10 mx-7 xl:mt-72 sm:mt-48 mt-40'
  >
    <Navbar />

    <Section id='home'>
      <h2
        class='text-white text-6xl md:text-8xl sm:text-7xl font-bold text-nowrap flex flex-wrap gap-3 sm:mb-0 mb-1'
      >
        <span>Hi,</span>
        <span>Iâ€™m Kevin</span>
      </h2>
      <h3
        class='text-2xl text-pretty sm:text-3xl font-normal text-white max-w-[730px] mt-4'
      >
        <strong>Fullstack Developer</strong> building responsive, fast, and maintainable
        <strong>Web Applications</strong>.
      </h3>
      <Socials />
    </Section>

    <Section class='gap-8' id='projects'>
      <Title {...SECTIONS.PROJECTS} />

      <div
        class={`
					xl:grid [grid-template-columns:5fr_1fr_5fr] 
					flex flex-col gap-8 items-start
				`}
      >
        {PROJECTS.map((proj, i) => <Project {...proj} index={i} />)}
      </div>
    </Section>

    <Section class='gap-6' id='about'>
      <Title {...SECTIONS.ABOUT} />
      <div
        class='text-xl font-light text-gray-200 flex flex-col gap-5 text-pretty max-w-4xl'
      >
        <p>
          I'm Kevin Rodriguez, a final-year engineering student and
          <strong>Fullstack Developer</strong> with 2 years of experience shipping
          projects from concept to production.
        </p>
        <p>
          My work stands out for strong <strong>attention to detail</strong>. I
          build responsive, fast, and scalable web applications that people
          actually <strong>enjoy</strong> using, and I adapt easily to any part of
          the stack to help ship clean, reliable products.
        </p>
      </div>
    </Section>

    <Footer />

    <ContactForm client:idle />
  </main>
</Layout>

<style is:global>
  #home h3 strong {
    @apply bg-clip-text text-transparent font-extrabold 
			bg-gradient-to-r from-[#8e63f3] to-[#5d6bff];
  }
  #about p {
    strong {
      @apply bg-clip-text text-transparent bg-gradient-to-l from-[#9998fd] to-[#b09eec] font-semibold;
    }
    a {
      @apply text-white hover:underline;
    }
  }

  @media (max-width: 1279px) {
    #project {
      &:nth-child(1) {
        order: 1;
      }
      &:nth-child(2) {
        order: 3;
      }
      &:nth-child(3) {
        order: 4;
      }
      &:nth-child(4) {
        order: 2;
      }
    }
  }
</style>
